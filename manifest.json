{
    "manifest_version": 2,
    "name": "Todo",
    "version": "1.0",

    "description": "任务目标管理",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },

    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js": ["js/content_script.js"],
            "css": ["css/custom.css"]
        },
        {
            "matches": ["*://*.baidu.com/*"],
            "js": ["js/jquery.min.js", "js/baidu.js"]
        },
        {
            "matches": ["*://*.google.com/search*"],
            "js": ["js/google.js"]
        }
    ],
    "author": "again",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["storage", "notifications", "<all_urls>"],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    }
}